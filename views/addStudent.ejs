<!DOCTYPE html>
<html>
  <head>
    <title>Add Student</title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/theme.css" />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h2>Add Student</h2>
          <form method="POST" action="/students/add">
            <fieldset>
              <legend>Personal Information</legend>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <label>First Name:</label>
                    <input class="form-control" name="firstName" type="text" />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                    <label>Last Name:</label>
                    <input class="form-control" name="lastName" type="text" />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Email:</label>
                    <input class="form-control" name="email" type="email" />
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <div class="form-group">
                    <label>Address (Street):</label>
                    <input
                      class="form-control"
                      name="addressStreet"
                      type="text"
                    />
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label>Address (City):</label>
                    <input
                      class="form-control"
                      name="addressCity"
                      type="text"
                    />
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label>Address (Province):</label>
                    <input
                      class="form-control"
                      name="addressProvince"
                      type="text"
                    />
                  </div>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>Academic Information</legend>
              <div class="row">
                <div class="col-md-4">
                  <label>College Employment:</label><br />
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="TA"
                      id="TA"
                    />
                    <label class="form-check-label" for="TA"
                      >Teaching Assistant</label
                    >
                  </div>
                  <br />
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label>Enrollment Status:</label><br />
                    <label class="checkbox-inline">
                      <input type="radio" name="status" value="Full Time" />
                      Full Time
                    </label>
                    <label class="checkbox-inline">
                      <input type="radio" name="status" value="Part Time" />
                      Part Time
                    </label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-group">
                    <label for="course">Enrolled in Course:</label>
                    <% if(typeof courses !== 'undefined' && courses &&
                    courses.length > 0) { %>
                    <select class="form-control" name="course" id="course">
                      <option value="">Select Course</option>
                      <% courses.forEach(course => { %>
                      <option value="<%= course.courseId %>">
                        <%= course.courseCode %> - <%= course.courseDescription
                        %>
                      </option>
                      <% }); %>
                    </select>
                    <% } else { %>
                    <div>No Courses</div>
                    <% } %>
                  </div>
                </div>
              </div>
            </fieldset>
            <hr />
            <input
              type="submit"
              class="btn btn-primary float-right"
              value="Add Student"
            /><br /><br /><br />
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
