<div class="row">
  <div class="col-md-12">
    <br />
    <h2>
      Students
      <a href="/students/add" class="btn btn-success float-right"
        >Add New Student</a
      >
    </h2>
    <hr />

    <% if(typeof students !== 'undefined' && students && students.length > 0) {
    %>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th>Student Number</th>
            <th>Full Name</th>
            <th>Email</th>
            <th>Status</th>
            <th>Course</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% students.forEach(function(student) { %>
          <tr>
            <td><%= student.studentNum %></td>
            <td>
              <a href="/student/<%= student.studentNum %>">
                <%= student.firstName %> <%= student.lastName %>
              </a>
            </td>
            <td><%= student.email %></td>
            <td><%= student.status %></td>
            <td><%= student.course %></td>
            <td>
              <a
                href="/student/delete/<%= student.studentNum %>"
                class="btn btn-danger"
                >Remove</a
              >
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <% } else { %>
    <div class="col-md-12 text-center">
      <strong
        ><%= typeof message !== 'undefined' ? message : "No Results" %></strong
      >
    </div>
    <% } %>
  </div>
</div>
